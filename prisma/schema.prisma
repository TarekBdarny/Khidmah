generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(cuid())
  firstName   String
  clerkId   String @unique
  lastName    String
  phoneNumber String? @unique
  profilePic  String?
  email       String @unique
  password    String?
  age         Int?
  verified Boolean @default(false)
  hasCompletedProfile Boolean @default(false)
  role        Role   @default(CLIENT)
  city        String?

  // Relations
  worker        Worker?
  request       WorkerRequest?
  notifications Notification[]
  workPosts     WorkPost[]     @relation("ClientPosts")
  ratingsGiven  Rating[]       @relation("UserRatings")
  savedWorkers  SavedWorkers[]
  attachments  Attachment[]
  sentMessages     Message[]      @relation("SentMessages")
  receivedMessages Message[]      @relation("ReceivedMessages")
  conversationsA   Conversation[] @relation("UserA")
  conversationsB   Conversation[] @relation("UserB")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Worker {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  offDays   String[] // e.g., ["Monday", "Wednesday"]
 startTime String
 endTime String
  companyName String?
  yearsExperience String?
  availableToWork Boolean @default(true)
  maxWorkDistance String?
  areasOfExperience String[]
  // Relations
  ratings       Rating[]
  previousWorks PreviousWork[]
  applicants    WorkPost[]     @relation("JobApplicants")
  savedByUsers  SavedWorkers[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Rating {
  id       String  @id @default(cuid())
  comment  String?
  rate     Int // 1â€“5
  raterId  String
  workerId String

  rater  User   @relation("UserRatings", fields: [raterId], references: [id])
  worker Worker @relation(fields: [workerId], references: [id])

  createdAt DateTime @default(now())
}

model WorkPost {
  id          String    @id @default(cuid())
  clientId    String
  description String
  startTime   DateTime?
  deadline    DateTime?
  payment     Float?
  photos      String[]
  location    String
  isAvailable Boolean   @default(true)

  client     User       @relation("ClientPosts", fields: [clientId], references: [id])
  applicants Worker[]   @relation("JobApplicants")
  // categories Category[] @relation("WorkPostCategories")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PreviousWork {
  id          String    @id @default(cuid())
  workerId    String
  location    String?
  description String?
  startTime   DateTime?
  finishTime  DateTime?
  photos      String[]

  worker Worker @relation(fields: [workerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}
model Attachment {
  id String @id @unique @default(cuid())
  userId String
  publicId String
  requestId String
  name String
  size Int
  urlPath String
  fileType String
  createdAt DateTime @default(now())
  updatedAt     DateTime       @updatedAt

  user User @relation(fields: [userId] , references: [id], onDelete: Cascade)
  request WorkerRequest @relation(fields: [requestId] , references: [id], onDelete: Cascade)
}
model Category {
  id          String  @id @default(cuid())
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  translations CategoryTranslation[]
}
model CategoryTranslation {
  id          String    @id @default(uuid())
  language    String    // 'he', 'ar', 'en', etc.
  name        String
  description String?
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([language, categoryId]) // prevent duplicate translations per category
}
model WorkerRequest {
  id          String        @id @default(cuid())
  userId      String        @unique
  status      RequestStatus @default(PENDING)
  message     String?
  attachments Attachment[]
  offDays   String[] // e.g., ["Monday", "Wednesday"]
  startTime String
  endTime String
  companyName String?
  areasOfExperience String[]
  yearsExperience String?
  availableToWork Boolean @default(true)
  maxWorkDistance String?
  createdAt   DateTime      @default(now())
  reviewedAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String           @id @default(cuid())
  userId    String           @unique
  title     String
  message   String
  type      NotificationType
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id])
}

model SavedWorkers {
  id        String   @id @default(cuid())
  userId    String // the user who saved the worker
  workerId  String // the worker who is saved
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  worker    Worker   @relation(fields: [workerId], references: [id], onDelete: Cascade)

  @@unique([userId, workerId])
}
model VerificationCode {
  id        String   @id @default(cuid())
  phoneNumber     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([phoneNumber, code])
}

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastMessage String?
  lastMessageAt DateTime @default(now())

  // Two users in a 1-on-1 conversation
  userAId String
  userA   User   @relation("UserA", fields: [userAId], references: [id], onDelete: Cascade)
  
  userBId String
  userB   User   @relation("UserB", fields: [userBId], references: [id], onDelete: Cascade)

  // Messages in this conversation
  messages Message[]

  // Ensure a unique conversation between two users
  @@unique([userAId, userBId])
  @@index([userAId])
  @@index([userBId])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
  // Sender and receiver
  senderId   String
  sender     User   @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  
  receiverId String
  receiver   User   @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  // Which conversation this belongs to
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([receiverId])
}

enum NotificationType {
  SYSTEM
  CHAT
  JOB
  RATING
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  ADMIN
  CLIENT
  WORKER
}
